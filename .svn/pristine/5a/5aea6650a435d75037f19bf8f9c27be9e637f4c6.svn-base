body {
	background-color: #666;
	font-family: "Calibri", sans-serif;
	margin: 0;
	padding: 0;
}

img {
	margin: 0;
}

.title_bar {
	position: fixed;
    z-index: 10;
	top: 0;
	left: 0;
	display: flex;
	background-color: #fff;
	width: 100%;
	padding: 0;
	margin: 0;
	align-items: stretch;
	border-bottom: 1px #000 solid;
}

.ou_logo {
	width: 70px;
	height: 40px;
	padding: 5px;
	margin: 0;
}

h1 {
	font-size: 30px;
	margin: 0;
	padding: 10px 50px 10px 50px;
}

.login_info {
	padding: 15px 20px 10px 20px;
	font-size: 25px;
}

.navigation {
	flex-grow: 1;
	text-decoration: none;
	text-align: center;
	color: #000;
	border-right: 1px solid #ccc;
	background-color: #ddd;
	font-size: 25px;
	margin: 0;
	padding: 15px 10px 10px 10px;
	vertical-align: text-bottom;
}

#active_nav_element {
	background-color: #fff;
}

.page_content {
	position: relative;
	background-color: #fff;
}

.content_title {
	padding: 60px 0 10px 0;
	width: 100%;
	background-color: #CAF010;
}

h2 {
	font-size: 40px;
	width: 200px;
	text-align: center;
	margin-right: auto;
	margin-left: auto;
	margin-top: 0;
	margin-bottom: 0;
	padding-top: 10px;
}

.horizontal_bar {
	width: 100%;
	margin: 0;
	padding: 0;
	display: block;
}

.main_content {
	float: right;
	width: 780px;
	padding: 10px;
}

.main_content table th, .main_content table td {
	padding-left: 8px;
	padding-right: 8px;
	border: 1px solid;
	border-collapse: collapse;
	margin: 0;
}

.main_content table {
	width: 100%;
}

.content_footer {
	width: 100%;
	padding: 8px;
	clear: both;
}

.tabs_container {
	width: 100%;
	overflow: hidden;
	margin-top: 0;
	background-color: #bbb;
}

ul.tabs {
	list-style: none;
 	padding: 0;
 	margin-top: 5px;

}

ul.tabs li {
	display: inline;
	border-top-left-radius: 10px;
	border-top-right-radius: 10px;
}

ul.tabs li a:hover {
	background-color: #ccc;
}

ul.tabs li a {
	text-decoration: none;
	padding: 5px;
	min-width: 100px;
	text-align: center;
	float: left;
	color: #000;
	margin-bottom: 0px;
	border-top-left-radius: 10px;
	border-top-right-radius: 10px;
	margin-left: 5px;
	background-color: #ddd;
}


#active_tab {
	background-color: #fff;
}

input {
	margin: 3px 0px 3px 0px;
}

.wide_input {
	width: 300px;
}

.edit_member_form {
	float: left;
	padding: 0 8px 0 8px;
	background-color: #eee;
	margin: 10px 0 10px 0;
}

.members_list {
	margin-left: auto;
	margin-right: auto;
	background-color: #eee;
	padding: 8px;
	clear: all;
}

.message_members_form {
	background-color: #eee;
	padding: 8px;
}

.message_members_form textarea {
	width: 756px;
	height: 500px;
}