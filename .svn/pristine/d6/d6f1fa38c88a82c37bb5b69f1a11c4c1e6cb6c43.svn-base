			<div class="main_content">
				<h3>Message Members</h3>

				<form action="http://students.open.ac.uk/mct/tt284/reflect/reflect.php" method="post" class="message_members_form">
					<h4>New Message</h4>
					<label for="title">Title</label>
					<input type="text" name="title" id="title" class="wide_input"><br>
					<label for="date">Date to send</label><br/> 
					<input type="date" name="date" id="date"><br>
					<label for="message">Message</label><br>
					<textarea name="message" id="message" cols="40" rows"40"></textarea><br>
					<label for="attachment">Attach a file</label><br/>
					<input type="file" name="attachment" id="attachment" value="Attach File" class="form_button">
					<input type="hidden" name="sessionID" value="ABCDEF01-AABB-CCDD-EEFF-ABCDEF012345">
					<br>
					Please note, only members who gave consent to emails will recieve this.
					<br>
					<input type="submit" value="Send" class="form_button">
				</form>
			</div>
